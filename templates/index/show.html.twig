{% extends 'home.html.twig' %}

{% block title %}Blog{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/post.css') }}" rel="stylesheet" />
{% endblock %}

{% block header %}
    {{ include('partials/home-header.html.twig') }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12 mb-5">
                <article>
                    <!-- Post header-->
                    <header class="mb-4">
                        <!-- Post title-->
                        <h1 class="fw-bolder mb-1">{{ article.title }}</h1>
                        <!-- Post meta content-->
                        <div class="text-muted fst-italic mb-2">
                            Posted on {{ article.createdAt|date("M d, Y") }} by {{ article.user.name }}
                        </div>
                        <!-- Post categories-->
                        <a class="badge bg-secondary text-decoration-none link-light" href="#!">Web Dev</a>
                        <a class="badge bg-secondary text-decoration-none link-light" href="#!">Symfony 5</a>
                    </header>
                    <!-- Preview image figure-->
                    <figure class="mb-4">
                        <img class="img-fluid rounded" src="{{ asset('images/articles/' ~ article.image) }}" alt="post image" />
                    </figure>
                    <!-- Post content-->
                    <section class="mb-5">
                        <p class="fs-5 mb-4">{{ article.body }}</p>
                    </section>
                </article>
                <a href="{{ path('index') }}" class="btn btn-info">Back to list</a>
            </div>
        </div>
    </div>
{% endblock %}

<header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid text-white">
            <a href="{{ path('index') }}" class="navbar-brand">Symfony 5</a>
            <form class="d-flex">
                <a class="btn btn-outline-info" href="{{ path('index') }}">View All</a>
                {% if is_granted('ROLE_USER') %}
                    <a class="btn btn-outline-warning" href="{{ path('app_logout') }}">Logout</a>
                {% else %}
                    <a class="btn btn-outline-warning mr-2" href="{{ path('app_login') }}">Login</a>
                    <a class="btn btn-outline-danger" href="{{ path('app_register') }}">Signup</a>
                {% endif %}
            </form>
        </div>
    </nav>
</header>

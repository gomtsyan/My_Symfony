{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block header %}
    {{ include('partials/header.html.twig') }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="d-flex justify-content-center h-100 mt-5">
            <div class="card text-white bg-danger">
                <div class="card-header">
                    <h3>Register</h3>
                </div>
                <div class="card-body">
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.name) }}
                    {{ form_row(registrationForm.address) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password',
                        attr: {'class': 'form-control'}
                    }) }}
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'ml-2'}}) }}

                    <button type="submit" class="btn btn-outline border-white text-white mt-2">Register</button>
                    {{ form_end(registrationForm) }}
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-around links">
                        Have an account? <a href="{{ path('app_login') }}" class="text-warning"> Sign In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
